{
  "name": "todolist",
  "version": "1.0.0",
  "description": "this application just for applaying the clean arch , best practises ,  code styles and more  ",
  "main": "index.js",
  "author": "EngAhmedMahmoud",
  "license": "MIT",
  "scripts": {
    "start:dev": "npx nodemon",
    "build": "rimraf ./build && tsc",
    "start": "yarn run build && node ./build/app.js",
    "check-types":"tsc --pretty --noEmit",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test-all":"yarn run prettier-format && yarn run lint && yarn run check-types && yarn run build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "nodemon": "^2.0.21",
    "onchange": "^7.1.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
